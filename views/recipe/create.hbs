<h3>Create a new recipe</h3>

<form action="/create-recipe" method="POST">
    <div class="form-group">
        <input type="text" name="title" placeholder="title" class="form-control">
    </div>
    <div class="form-group">
        <input type="text" name="level" placeholder="level" class="form-control">
    </div>
    <div class="form-group">
        <input type="text" name="ingredients" placeholder="ingredients" class="form-control">
    </div>
    <div class="form-group">
        <input type="text" name="cuisine" placeholder="cuisine" class="form-control">
    </div>
    <div class="form-group">
        <input type="text" name="dishType" placeholder="dish type" class="form-control">
    </div>
    <div class="form-group">
        <input type="text" name="duration" placeholder="duration" class="form-control"> 
    </div>
    <div class="form-group">
        <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="creator">
            {{#each cooks}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
    </div>
    <button type="submit" class="btn btn-dark">Create </button>
</form>