

<form action="/cooks/create" method="POST" enctype="multipart/form-data">
    <input type="text" required pattern="^[A-Za-z]+$" name='name' placeholder="name">
    <input type="text" name='image' placeholder="image url">
    <input type="file" name="cook-image">
    <button type="submit">Create</button>
</form>

{{#each cookHbs}}
    <h3>{{name}}</h3>
    <img src="{{image}}" alt="">
    <img src="/{{imagefile}}" alt="">
{{/each}}
