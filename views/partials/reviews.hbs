<form action="/recipes/reviews/create/{{recipe._id}}" method="POST">
    <div class="form-group"></div>
        <input type="text" class="form-control" placeholder="Title" name="title">
    </div>
    <div class="form-group mt-2">
        <label class="mr-3" for="">Score:</label>
        <input type="range" min="0" max="10" name="score">
    </div>
    <div class="form-group">
        <textarea class="form-control" placeholder="Comment" name="comment"></textarea>
    </div>
    <button class="btn">Post Review</button>
    <input type="text" class="form-control" hidden name="id" value="{{recipe._id}}">
</form>