<h1>Search recipes</h1>
<form action="/recipes/search" method="POST">
    <label for="title-input">Search by title or cuisine:</label>
    <input id="title-input" type="text" name="title" placeholder="For example: pancakes..">

    <input type="submit" value="Search">
</form>

{{#each recipes}}
    <h1>{{title}}</h1>
    <img src="{{image}}" alt="">
    <h3>{{ingredients}}</h3>
    <h3>{{cuisine}}</h3>
    <h3>{{level}}</h3>
    <h3>{{duration}}</h3>
    <h3>{{dishType}}</h3>
    <h3>{{creator}}</h3>
    <h3>{{created}}</h3>
{{/each}}

