<div class="container py-5">
    <div class="row row-cols-3">
        {{#each allRecipesFromDB}}
        <div class="col py-2">
            <a class="recipe-card-anchor" href="/recipes/detail?id={{this._id}}">
                <div class="card border-info h-100">
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.title}}">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text text-muted">Cuisine: {{this.cuisine}}</p>
                    </div>
                    <div class="card-footer">
                        {{#each this.creator}}
                            <span>{{this.name}}</span>
                            <img style="position: relative; float:right" class ="rounded-circle" src="{{this.image}}" alt="{{this.name}}">
                        {{/each}}
                        
                    </div>
                </div>
            </a>
        </div>
        {{/each}}
    </div>
</div>