<section class="list">
    {{#each cooks}}

    <div class="col-10 col-md-6 col-lg-4">
        <article class="list-item">
            <div>
                <a href="/cooks/detail/{{this._id}}"><img src={{this.image}} class="img-fluid" alt='image'></a>
            </div>
            <div>
                <h2>{{this.name}}</h2>
                <a href="/cooks/detail/{{this._id}}">More</a>
            </div>
            <div class="delete-link">
                <a href="/cooks/update/{{this._id}}">Update</a>
                <a href="/cooks/delete/{{this._id}}">Delete</a>
            </div>
        </article>       
    </div>

    {{/each}}
</section>