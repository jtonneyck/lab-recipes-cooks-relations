<section class="create">
    <form action="/cooks/create" method="post" id="create-cook">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" placeholder="Cook's name" class="form-control">
        </div>
        <div class="form-group">
            <label for="image">Image URL</label>
            <input type="text" name="imageUrl" placeholder="Image URL" size="90" class="form-control">
        </div>
        <button type="submit" formmethod="POST" class="btn btn-primary">Create cook</button>
    </form>
</section>
