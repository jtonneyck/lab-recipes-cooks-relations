<div class="m-3">
    <h2 class="mb-4">Update cook</h2>

    <form id="form-create" action="/cooks/update" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" value="{{cook.name}}" placeholder="Name" name="name">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" value="{{cook.image}}" placeholder="image url" name="image">
        </div>
        <div class="form-group">
            <button type="submit" class="btn">Update Cook</button>
        </div>
        <input type="text" hidden value="{{cook.id}}" name="id">
    </form>
</div>