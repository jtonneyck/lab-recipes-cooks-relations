<div class="container py-5">
  <form action="/cooks/update?id={{cook._id}}" method="POST">
    <div class="form-group">
      <label>Name</label>
      <input type="text" class="form-control" name="name" value="{{cook.name}}">
    </div>
    <div class="form-group">
      <label>Image Url</label>
      <input type="text" class="form-control" name="image" value="{{cook.image}}">
    </div>
    <button class="btn btn-outline-secondary">Update</button>
  </form>
</div>