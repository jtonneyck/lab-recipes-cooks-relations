<div class="container">
  <div class="row row-cols-1 row-cols-md-2">
    {{#each allCooks}}
    <div class="col mb-4">
      <div class="card card-list">
        <a href="/cooks/{{id}}">
          <img src="{{image}}" class="card-img-top" alt="Chef">
          <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
          </div>
        </a>
      </div>
    </div>
    {{/each}}
  </div>
</div>